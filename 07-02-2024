
class Solution{
    public:
    /* Should return minimum distance between a and b
    in a tree with given root*/
    Node* lca(Node* root,int a,int b){
        if(!root) return NULL;
        if(root->data == a or root->data == b ) return root;
        Node* left_lca =lca(root->left,a,b);
        Node* right_lca =lca(root->right,a,b);
        if(left_lca and right_lca) return root;
        if(left_lca) return left_lca;
        return right_lca;
        
    }
    int solve(Node* root,int val){
        if(!root) return 0;
        if(root->data == val)return 1;
        int a = solve(root->left,val);
        int b = solve(root->right,val);
        if( !a and !b ) return 0;
        else return a+b+1;
        
    }
    int findDist(Node* root, int a, int b) {
        // Your code here
        Node* LCA= lca(root,a,b);
        int x = solve(LCA,a);
            int y = solve(LCA,b);
            return x+y-2;
    }
};